@{
    ViewBag.Title = "Search";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        table {
            border: 1px solid;
            border-color: grey;
            margin: auto;
            width: 100%;
        }
        tr, td {
            border: 1px solid;
            border-color: grey;
            font-size: 16px;
        }
    </style>
</head>
<body>
    <div class="container body-content">

        <h2>Search</h2>
        <div class="form-group">
            <form class="form-inline" method="post" target="_self">
                <input class="form-control" type="text" placeholder="Search" name="arg" />
                <input class="btn btn-info" type="submit" value="Search" />
            </form>
        </div>

        <div class="table-responsive">
            <table class="table table-striped">
                @if (ViewBag.items?.Count > 0)
                {
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Image</th>
                            <th>Price</th>
                            <th>Exists</th>
                        </tr>
                    </thead>
                }
                <tbody>
                    @foreach (_3rd_searching.Models.Item item in ViewBag.items ?? new List<int>())
                    {
                        <tr>
                            <td><a target="_blank" style="vertical-align:top" href="@item.ItemLink">@item.Name</a></td>
                            <td><img class="img-rounded" src="@item.ImageLink" /></td>
                            <td>@item.Price</td>
                            <td>@item.Existance</td>
                            <td><a target="_blank" href="@item.ItemLink" class="btn btn-info" role="button">Перейти</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
